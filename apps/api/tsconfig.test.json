{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*",
    "@types/*.d.ts",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/lib/test-setup.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "types": ["node", "jest"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16"
  }
}
