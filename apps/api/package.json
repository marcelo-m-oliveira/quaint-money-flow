{
  "name": "@saas/api",
  "version": "1.0.0",
  "description": "API backend for Quaint Money Flow",
  "scripts": {
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "env:load": "dotenv -e ../../.env --",
    "build": "tsup",
    "lint": "eslint src --ext .ts --fix",
    "start": "node dist/http/server.js",
    "test": "pnpm env:load jest",
    "test:watch": "pnpm env:load jest --watch",
    "test:coverage": "pnpm env:load jest --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^5.19.1",
    "@saas/env": "workspace:*",
    "@saas/utils": "workspace:*",
    "@saas/validations": "workspace:*",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.3",
    "jsonwebtoken": "^9.0.2",
    "swagger-themes": "^1.4.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@faker-js/faker": "^9.9.0",
    "@saas/eslint-config": "workspace:*",
    "@saas/prettier": "workspace:*",
    "@saas/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.17.1",
    "babel-jest": "^30.0.5",
    "dotenv-cli": "^7.4.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^5.19.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "prettier": "@saas/prettier",
  "eslintConfig": {
    "extends": [
      "@saas/eslint-config/node"
    ]
  }
}